    // console.log(xAxis)

    // import axios from "axios"

    axios
      .get("http://localhost:3000/allScans")

      .then((res) => {
        x = res.data;
        // y = res.data

        const ctx = document.getElementById("myChart");
        new Chart(ctx, {
          type: "line",
          data: {
            labels: res.data.yAxis,
            datasets: [
              {
                data: res.data.xAxis,
                borderWidth: 3,
              },
            ],
          },
          options: {
            plugins: {
              legend: {
                display: false,
              },
            },
            indexAxis: "y",
            scales: {
              y: {
                position: "left",
                grid: {
                  display: true,
                  color: "gray",
                  // drawOnChartArea: CHART_AREA,
                  // drawTicks: TICKS,
                },
                title: {
                  display: true,
                  text: "Process Number",
                  font: {
                    size: 20,
                  },
                },
              },
              x: {
                position: "top",
                grid: {
                  display: true,
                  color: "gray",
                },
                title: {
                  display: true,
                  text: "Burst time",
                  font: {
                    size: 20,
                  },
                },
              },
            },
          },
        });
      })
      .catch((err) => console.log(err));
  </script>
