<body>
  <div class="center">
    <h1 class="headings">SCAN <span>/</span> C-SCAN</h1>
  </div>

  <h1 style="color: white; text-decoration:underline #dd2682" class="center">Completed Process Sequence</h1>
  <div class="solution-heading">
    <% for (var i=0; i < completed_processes.length; i++) { %>
    <h1 style="margin: 20px 20px auto; color: white">
      <%= completed_processes[i].id %>
    </h1>
    <% } %>
  </div>

  <canvas id="myChart"></canvas>

  <script>
    // let xAxis;
